"macro to control the SCN microcontroller"

$action = 'extamp'
$argument = ''

$returnvalue='No Action done!'

if ($# < 1)then
    return('None')
endif

if ($# > 0) then
    $action = $1
endif
if ( $action = "reset") then
    $shellcmd='rm ../tmp/B12*'
    shell($shellcmd)
    $returnvalue = 'reset successfull'
    write('line3','SCN returned:%s',$returnvalue)
    return($returnvalue)
endif

if ($# > 1) then
    $argument = $2
endif
if ($# > 2) then
    $argument2 = $3
    $shellcmd='python3 /vnmr/bin/B12SCNControl.py '+$action+' '+$argument+' '+$argument2
    shell($shellcmd):$returnvalue
else
    $shellcmd='python3 /vnmr/bin/B12SCNControl.py '+$action+' '+$argument
    shell($shellcmd):$returnvalue
    write('line3','SCN returned:%s',$returnvalue)
    return($returnvalue)
endif

write('line3','SCN returned:%s',$returnvalue)
return($returnvalue)
